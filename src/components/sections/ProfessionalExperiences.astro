---
import { getCollection } from 'astro:content';
import { BadgeList, Section } from "../";
import Logo from '@assets/svg/background.svg';

const experiences = await getCollection('experiences');
const countries = [...new Set(experiences.map(experience => experience.data.country))];
---

<div class="bg-primary/5 py-10">
    <Section headingTitle="Professional Experiences" subtitle='A comprehensive look at my professional growth and key accomplishments' class="space-y-5 container mx-auto">
        <Logo slot="beforeHeading" width={64} height={64} />
        <div class="mt-16 block"></div>
        {experiences.map(({ data: experience }) => (
            <article class="flex gap-2">
                <div class="flex flex-col">
                    <span class="h-10 w-10 flex items-center justify-center text-white font-bold">1</span>
                </div>
                <div class="card w-2/5 flex flex-col">
                    <h3 class="text-xl font-semibold">{experience.company}</h3>
                    <span class="text-sm text-gray-600">{experience.sector}</span>
                    <p class="mt-2 flex flex-col">
                        <span>{experience.location}</span>
                        <span>{experience.period}</span>
                    </p>
                </div>
                <div class="card w-4/5">
                    <h2 class="text-xl font-semibold">{experience.position}</h2>
                    <p class="my-3 text-gray-800">{experience.description}</p>
                    {/* <BadgeList items={experience.technologies} /> */}
                </div>
            </article>
        ))}
    </Section>
</div>