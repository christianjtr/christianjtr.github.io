---
import { getCollection, getEntry } from 'astro:content';

import type { ContentDataEntryType } from '@app-types/Content';
import type { Experience } from '@schemas/ExperienceSchema';
import type { Study } from '@schemas/StudySchema';
import type { AboutMeData } from '@schemas/AboutMeSchema';
import { CONTENT } from '@app-types/Content';
import { Badge, BadgeList, Section, VerticalSpacer } from "../";
import Logo from '@assets/svg/background.svg';
import BuildingIcon from '@assets/svg/building.svg';
import AcademicCapIcon from '@assets/svg/academic_cap.svg';

type BackgroundType = "work" | "study";

interface Background {
    start_year: number;
    end_year: number;
    period: string;
    title: string;
    organization: string;
    isOngoing: boolean;
    description: string;
    flag_asset: string;
    country: string;
    topics: string[];
    category: string;
    type: BackgroundType;
};

const backgroundTypeIcons: Record<BackgroundType, string> = {
    'work': 'ðŸ’¼',
    'study': 'ðŸ“š'
};

const { lang } = Astro.params;

const [commonData, [ experiencesData ], [ studiesData ]] = await Promise.all([
    await getEntry(lang as ContentDataEntryType, `${lang}/${CONTENT.COMMON}`),
    await getCollection(lang as ContentDataEntryType, (collection) => collection.id === `${lang}/${CONTENT.EXPERIENCES}`),
    await getCollection(lang as ContentDataEntryType, (collection) => collection.id === `${lang}/${CONTENT.STUDIES}`)
]);

const { section_studies, section_experiences, common, header } = (commonData?.data as AboutMeData) || {};
const { data: experiences } = experiencesData;
const { data: studies } = studiesData;

const uniqueCountries = Array.from(new Set(experiences.map((eachExperience: Experience) => eachExperience.country )));

const backgroundItems: Background[] = [
    ...experiences.map((eachExperience: Experience) => ({
        start_year: eachExperience.start_year,
        end_year: eachExperience.end_year,
        period: eachExperience.period,
        title: eachExperience.position,
        organization: eachExperience.company,
        isOngoing: eachExperience.isOngoing,
        description: eachExperience.description,
        flag_asset: eachExperience.flag_asset,
        country: eachExperience.country,
        topics: eachExperience.technologies,
        category: eachExperience.sector,
        type: "work" as BackgroundType
    })),
    ...studies.map((eachStudy: Study) => ({
        start_year: eachStudy.start_year,
        end_year: eachStudy.end_year,
        period: eachStudy.period,
        title: eachStudy.degree,
        organization: eachStudy.school,
        isOngoing: eachStudy.isOngoing,
        description: eachStudy.description,
        flag_asset: eachStudy.flag_asset,
        country: eachStudy.country,
        topics: eachStudy.topics,
        category: eachStudy.subject,
        type: "study" as BackgroundType
    })),
].sort((a, b) => {
    const yearA = a.end_year;
    const yearB = b.end_year;
    return yearB - yearA;
});
---

<div class="bg-primary/5 py-10" id={header.main_sections[2].anchorId}>
    <br />
    <Section headingTitle={section_experiences.title} subtitle={section_experiences.subtitle} class="container mx-auto">
        <Logo slot="beforeHeading" width={96} height={96} />
        <br />
        <div class="px-5 md:px-14">
            <div class="stats md:stats-horizontal stats-vertical bg-base-100 w-full shadow-lg rounded-lg border border-neutral-100">
                <div class="stat w-full">
                    <img src="/src/assets/gifs/world.gif" width="50" height="50" alt="World" aria-label="World" class="stat-figure"/>
                    <span class="stat-title uppercase">{section_experiences.companies_and_countries_lived_in}</span>
                    <span class="stat-value">0{uniqueCountries.length}</span>
                    <span class="stat-desc">{section_experiences.collaborated_with}</span>
                    <div class="stat-actions">
                        <BadgeList badgeClass='badge-secondary' items={section_experiences.full_countries} />
                    </div>
                </div>
                <div class="stat w-full">
                    <img src="/src/assets/gifs/academic_cap.gif" width="60" height="60" alt="World" aria-label="World" class="stat-figure"/>
                    <span class="stat-title uppercase">{common.formal_studies_taken}</span>
                    <span class="stat-value">0{studies.length}</span>
                    <span class="stat-desc">{common.educational_level}</span>
                    <span class="stat-actions font-semibold text-lg">{section_studies.educational_level}</span>
                </div>
            </div>
            <VerticalSpacer />
            <div class="grid md:grid-cols-6 gap-8 px-7 sticky-section">
                <h3 class="text-3xl font-semibold col-span-1">{common.experiences}</h3>
                <div class="col-span-5">
                    <div class="divider divider-end flex items-center">
                        <input class="btn input-radio" type="radio" name="layout" value="list" aria-label={common.list} checked="checked" />
                        <input class="btn input-radio" type="radio" name="layout" value="timeline" aria-label={common.timeline} />
                    </div>
                </div>
            </div>
            <VerticalSpacer />
            <div class="list-wrapper px-7" data-layout="list">
                {backgroundItems.map((item: Background) => (
                    <div class="card bg-base-100 flex md:flex-row flex-col p-5 list-card-item">
                        <div class="md:w-1/5 w-full p-3 space-y-3">
                            <div class="bg-base-100 w-fit rounded-full p-3 border-3 border-secondary">
                                {item.type === "study" && <AcademicCapIcon width={24} height={24} />}
                                {item.type === "work" && <BuildingIcon width={24} height={24} />}
                            </div>
                            <span class="text-sm text-gray-600 block mb-2">{item.category}</span>
                            <span class="badge badge-sm badge-primary font-semibold uppercase text-white">{item.period}</span>
                            <p class="flex gap-2 items-center text-lg">
                                <img src={item.flag_asset} alt={item.country} />
                                <span>{item.country}</span>
                            </p>
                        </div>
                        <div class="md:w-4/5 w-full p-3">
                            <span class="text-neutral-500 block mb-1">{item.organization}</span>
                            <h2 class="text-2xl font-medium mb-3">
                                {item.title} {item.isOngoing && <span class="badge badge-sm badge-accent uppercase">{common.ongoing}</span>}
                            </h2>
                            <p class="card-content leading-8">{item.description}</p>
                        </div>
                    </div>
                ))}
            </div>
            <ul class="timeline timeline-vertical hidden px-7" data-layout="timeline">
                {backgroundItems.map((item: Background , index) => (
                    <li>
                        {index !== 0 && <hr class="bg-secondary" />}
                        <div class:list={["timeline-box shadow-none border-0 w-full p-4 mb-5", { "timeline-start": item.type  === "work" }, { "timeline-end": item.type  === "study" }]}>
                            <div class="card card-lg p-4">
                                <p class="flex justify-between mb-2">
                                    <span class="text-gray-600 text-sm">{item.organization}</span>
                                    {item.isOngoing && <Badge class="badge-sm badge-accent uppercase mx-0.5">{common.ongoing}</Badge>}
                                </p>
                                <span class="card-title w-full mb-2">{item.title}</span>
                                <Badge class="badge-sm badge-primary uppercase">{item.period}</Badge>
                                <div class="flex flex-col gap-1 text-gray-600 my-3">
                                    <p class="flex gap-3 items-center">
                                        <font class="text-2xl">{backgroundTypeIcons[item.type]}</font>
                                        <span class="text-sm">{item.category}</span>
                                    </p>
                                    <p class="flex gap-3 items-center">
                                        <img src={item.flag_asset} alt={item.country} width={28} height={28} alt={item.country} aria-label={item.country} />
                                        <span class="text-sm">{item.country}</span>
                                    </p>
                                </div>
                                <div class="card-body p-0">
                                    <p class="leading-8 mb-2">{item.description}</p>
                                    <div tabindex="0" class="collapse collapse-arrow bg-primary/5 px-3">
                                        <div class="collapse-title p-3 font-semibold text-sm flex items-center mb-2">
                                            {item.type === "work" && <>{common.technologies}</>}
                                            {item.type === "study" && <>{common.subjects}</>}
                                        </div>
                                        <div class="collapse-content text-sm">
                                            <BadgeList items={item.topics} badgeClass="badge-sm badge-soft" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="timeline-middle mx-3">
                            <div class="bg-base-100 w-fit rounded-full p-3 border-4 border-secondary">
                                {item.type === "study" && <AcademicCapIcon width={42} height={42} />}
                                {item.type === "work" && <BuildingIcon width={42} height={42} />}
                            </div>
                        </div>
                        {index < backgroundItems.length - 1 && <hr class="bg-secondary" />}
                    </li>
                ))}
            </ul>
        </div>
    </Section>
</div>

<script>
    type LayoutElementType = "list" | "timeline";
    
    const listElement = document.querySelector('[data-layout="list"]') as HTMLElement;
    const timelineElement = document.querySelector('[data-layout="timeline"]') as HTMLElement;
    const layoutModeBtns = document.querySelectorAll('input[name="layout"]') as NodeListOf<HTMLInputElement>;

    const layoutMap: Record<LayoutElementType, HTMLElement> = {
        "list": listElement,
        "timeline": timelineElement
    };

    layoutModeBtns.forEach((eachElement) => {
        eachElement.addEventListener('click', (event) => {
            const targetElement = event.currentTarget as HTMLInputElement;
            for (const mode in layoutMap) {
                const element = layoutMap[mode as LayoutElementType];
                if (mode === targetElement.value) {
                    element.classList.remove("hidden");
                } else {
                    element.classList.add("hidden");
                }
            }
        });
    });
</script>

<style>
    @reference "@styles/global.css";

    .sticky-section {
        @apply sticky top-20 z-2 py-3;
        background: var(--color-pale-lavender);
    }
    .timeline-box:hover, .list-card-item:hover {
        @apply shadow-xl shadow-indigo-200;
    }

    .list-wrapper {
        @apply space-y-11 z-1 relative;
    }

    .list-wrapper::before {
        @apply border-indigo-500 border border-dashed absolute bottom-0 top-0 left-24 z-0 w-0;
        content: '';
    }

    .stat-value {
        @apply font-semibold text-secondary text-5xl mt-2;
    }

    .stat-desc {
        @apply my-4;
    }

    .input-radio {
        @apply rounded-2xl min-w-24;
    }
</style>