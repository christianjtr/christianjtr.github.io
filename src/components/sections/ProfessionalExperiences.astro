    <Logo slot="beforeHeading" width={64} height={64} />
    {experiences.map(({ data: experience }) => (
        <article class="flex gap-3">
            <div class="flex flex-col">
                {/* <svg
                    xmlns="http://www.w3.org/2000/svg"
