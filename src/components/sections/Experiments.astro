---
import { getCollection, getEntry } from 'astro:content';

import type { ContentDataEntryType } from '@app-types/Content';
import type { AboutMeData } from '@schemas/AboutMeSchema';
import type { Experiment, ExperimentRole } from '@schemas/ExperimentSchema';
import { CONTENT } from '@app-types/Content';
import { BadgeList, LinkButton, Section, Badge } from "../";
import Logo from '@assets/svg/case_of_studies.svg';

const roleIcons: Record<ExperimentRole, string> = {
    'Author': 'ðŸ§‘ðŸ»â€ðŸ’»',
    'Contributor': 'ðŸ¤ðŸ¼'
};

const { lang } = Astro.params;

const [commonData, [ experimentsData ]] = await Promise.all([
    await getEntry(lang as ContentDataEntryType, `${lang}/${CONTENT.COMMON}`),
    await getCollection(lang as ContentDataEntryType, (collection) => collection.id === `${lang}/${CONTENT.EXPERIMENTS}`)
]);

const { section_experiments, common, header } = (commonData?.data as AboutMeData) || {};
const { data: experiments } = experimentsData;
---

<div class="bg-base-100 py-10" id={header.main_sections[1].anchorId}>
    <br />
    <Section headingTitle={section_experiments.title} subtitle={section_experiments.subtitle} class="container mx-auto">
        <Logo slot="beforeHeading" width={96} height={96} />
        <br />
        <div class="grid md:grid-cols-2 gap-8 px-5 md:px-14">
            {experiments.map((experiment: Experiment) => (
                <div class="card">
                    <figure>
                        <img src={experiment.image} alt={experiment.title} aria-label={experiment.title} />
                    </figure>
                    <div class="card-body">
                        <div class="card-pre-content-wrapper">
                            <Badge class="badge-sm badge-primary">{experiment.category}</Badge>
                            {experiment.url && <LinkButton href={experiment.url} target="_blank" rel="noreferrer" class='btn-circle' displayDefaultIcon />}
                        </div>
                        <h2 class="card-title">{experiment.title}</h2>
                        <p class="card-pre-content-wrapper"> 
                            <span class="card-text-info">
                                <font class="text-2xl">{roleIcons[experiment.role as ExperimentRole]}</font>
                                {experiment.type} Â· 
                                <font>
                                    {experiment.role === "Author" && `${common.author}`}
                                    {experiment.role === "Contributor" && `${common.contributor}`}   
                                </font>
                            </span>
                        </p>
                        <p class="card-text-content">{experiment.description}</p>
                        <div class="card-actions"> 
                            <BadgeList items={experiment.tags} badgeClass="font-semibold badge-soft" />
                        </div>
                    </div>
            </div>
            ))}
        </div>
    </Section>
</div>

<style>
    @reference "tailwindcss";
    
    .card {
        @apply overflow-hidden rounded-lg border border-neutral-200;
        color: var(--color-neutral-dark);
    }

    .card-body {
        @apply p-8;
    }

    .card:hover {
        @apply border-indigo-400 shadow-lg shadow-indigo-200;
    }

    .card-pre-content-wrapper {
        @apply flex justify-between items-center mb-2;
    }

    .card-title {
        @apply text-2xl my-3 font-medium;
    }
    .card-text-info {
        @apply text-gray-400 text-sm uppercase;
    }
    .card-text-content {
        @apply text-neutral-800 text-lg leading-9 mb-5;
    }
    .badge {
        @apply uppercase font-semibold text-white; 
    }
</style>