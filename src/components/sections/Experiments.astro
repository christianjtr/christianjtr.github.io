---
import { getCollection } from 'astro:content';
import { BadgeList, Section } from "../";

const experiments = await getCollection('experiments');

---

<Section headingTitle="Case of Studies and Conceptual Projects">
    <div class="mx-auto mt-12 grid max-w-lg gap-7 lg:max-w-none lg:grid-cols-2">
        {experiments.map(({ data: experiment }) => (
            <article class="card bg-base-100 overflow-hidden rounded-lg shadow-lg">
                <figure>
                    <img src={experiment.image} alt={experiment.title} />
                </figure>
                <div class="card-body">
                    <div class="flex justify-between items-center mb-1">
                        <span class="text-secondary text-sm font-light">
                            {experiment.category}
                        </span>
                        {experiment.url && (
                            <a class="btn btn-circle btn-secondary btn-sm" target="_blank" rel="noopener noreferrer" href={experiment.url} aria-label="Visit" title="Visit">
                                <svg fill="#ffffff" width="13px" height="13px" viewBox="0 0 1024.00 1024.00" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M960 704c-35.346 0-64 28.654-64 64v64c0 35.346-28.654 64-64 64H192c-35.346 0-64-28.654-64-64V192c0-35.346 28.654-64 64-64h64c35.346 0 64-28.654 64-64S291.346 0 256 0h-64C85.961 0 0 85.961 0 192v640c0 106.039 85.961 192 192 192h640c106.039 0 192-85.961 192-192v-64c0-35.346-28.654-64-64-64z"></path><path d="M1023.876 51.52c0-1.92 0-3.84-1.6-5.44a63.957 63.957 0 00-1.92-6.4 63.973 63.973 0 00-3.2-6.4s0-3.2-2.56-4.8a63.989 63.989 0 00-17.6-17.6L991.876 8l-6.08-3.2-6.72-1.92h-5.44A64.028 64.028 0 00959.876 0h-384c-35.346 0-64 28.654-64 64s28.654 64 64 64h229.44l-370.56 370.88c-25.007 25.007-25.007 65.553 0 90.56s65.553 25.007 90.56 0l370.56-370.88V448c0 35.346 28.654 64 64 64s64-28.654 64-64V64c.407-4.15.407-8.33 0-12.48z"></path></g></svg>
                            </a>
                        )}
                    </div>
                    <h2 class="card-title text-2xl">{experiment.title}</h2>
                    <p class="flex justify-between items-center mb-2"> 
                        <span class="text-gray-400">{experiment.type}</span>
                        <span class="text-gray-400">{experiment.role}</span>
                    </p>
                    <p class="mb-10">{experiment.description}</p>
                    {/* <div class="card-actions"> 
                        <BadgeList items={experiment.tags} badgeClass="badge-soft" />
                    </div> */}
                </div>
        </article>
        ))}
    </div>
</Section>