---
interface Props {
  title?: string;
  description?: string;
  image?: string;
  url?: string;
  type?: 'website' | 'article';
}

const {
  title = "Christian José Torrealba Rondón",
  description = "A personal website to share my background and professional experiences",
  image,
  url = "",
  type = 'website',
} = Astro.props;

const defaultImage = 'https://www.yoursite.com/default-share-image.jpg';
const siteName = 'Your Awesome Website Name';
---


<meta name="author" content={title}>
<meta name="og:title" property="og:title" content={title} />
<meta name="og:description" property="og:description" content={description} />
<meta name="og:site_name" property="og:site_name" content={title}>
<meta name="og:type" property="og:type" content={type} />
<meta name="og:type" property="og:type" content={url} />
<meta name="og:site_name" property="og:site_name" content={siteName} />
<meta name="og:image" property="og:image" content={image ?? defaultImage} />

<meta name="twitter:card" content="summary_large_image" />
<!-- <meta property="twitter:domain" content="christianjtr.github.io"> -->
<meta name="twitter:url" content={url} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={image ?? defaultImage} />