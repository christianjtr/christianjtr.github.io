---
import { getCollection } from 'astro:content';
import { BadgeList, ExternalLinkButton, Section } from "../";

const projects = await getCollection('projects');
---

<Section headingTitle="Showcased Projects" class="space-y-6">
    {projects.map(({ data: project }) => (
        <article>
            <div class="card bg-zinc-50 border-zinc-200 text-primary-content">
                <div class="card-body">
                    <h5 class="text-sm text-secondary">{project.owner}</h5>
                    <h2 class="card-title text-xl">{project.title}</h2>
                    <div class="grid gap-x-[120px] gap-y-0 grid-cols-[2fr_1fr] mt-5">
                        <div class="space-y-3">
                            <span class="w-full text-accent">Overview</span>
                            <p>{project.overview}</p>
                            <span class="w-full text-accent">Contribuitions</span>
                            <p>{project.contributions}</p>
                            <BadgeList items={project.technologies} />
                        </div>
                        <div class="space-y-3">
                            <span class="w-full text-accent">Role</span>
                            <p class="font-semibold">{project.contribute_as}</p>
                            <span class="w-full text-accent">Showcased at</span>
                            <p>
                                <span class="w-full block">{project.showcased_at}</span>
                                <span class="w-full block">{project.flag} {project.location}</span>
                                <span class="w-full block">{project.period}</span>
                                <ExternalLinkButton class="flex gap-2">View details</ExternalLinkButton>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </article>
    ))}
</Section>

