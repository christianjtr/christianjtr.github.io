{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "types": ["node"],
        "verbatimModuleSyntax": true,
        "jsx": "preserve",
        "jsxImportSource": "astro",
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@components": ["src/components"],
            "@components/*": ["src/components/*"],
            "@layouts": ["src/layouts"],
            "@layouts/*": ["src/layouts/*"],
            "@styles/*": ["src/styles/*"]
        },
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            }
        ]
    },
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"]
}
