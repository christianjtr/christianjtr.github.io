{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "types": ["node"],
        "verbatimModuleSyntax": true,
        "jsx": "preserve",
        "jsxImportSource": "astro",
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "@assets": ["src/assets"],
            "@assets/*": ["src/assets/*"],
            "@content": ["src/content"],
            "@content/*": ["src/content/*"],
            "@components": ["src/components"],
            "@components/*": ["src/components/*"],
            "@layouts": ["src/layouts"],
            "@layouts/*": ["src/layouts/*"],
            "@styles/*": ["src/styles/*"],
            "@schemas": ["src/schemas/*"],
            "@schemas/*": ["src/schemas/*"],
            "@app-types": ["src/types/*"],
            "@app-types/*": ["src/types/*"],
            "@utils": ["src/utils/*"],
            "@utils/*": ["src/utils/*"]
        },
        "plugins": [
            {
                "name": "@astrojs/ts-plugin"
            }
        ]
    },
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"]
}
